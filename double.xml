<instance format="XCSP3" type="CSP">
  <variables>
    <array id="x" size="[3][3]"> 1..9 </array>
  </variables>
  <constraints>
    <allDifferent> x[][] </allDifferent>
    <group>
      <sum>
        <list> %0 %1 %2 </list>
        <condition> (eq,15) </condition>
      </sum>
      <args> x[0][] </args>
      <args> x[1][] </args>
      <args> x[2][] </args>
    </group>
    <group>
      <sum>
        <list> %0 %1 %2 </list>
        <condition> (eq,15) </condition>
      </sum>
      <args> x[][0] </args>
      <args> x[][1] </args>
      <args> x[][2] </args>
    </group>
    <sum>
      <list> x[0][0] x[1][1] x[2][2] </list>
      <condition> (eq,15) </condition>
    </sum>
  </constraints>
</instance>
